$lex->add("orangutan", "ape");
$lex->add("human", "ape");

my $sym  = $lex->get("human");
print Dumper \$sym;
my $sym2 = $lex->get("ape");
print Dumper $sym2;
my $sym3 = $lex->get("felid");
print Dumper $sym3;

if ($sym) {
	print $sym->is("human")  . "=1\n";	#true
	print $sym->is($sym)     . "=1\n";	#true
	print $sym->is("ape")    . "=0\n";	#false
	print $sym->is($sym2)    . "=0\n";	#false
	print $sym->isa("ape")   . "=1\n";	#true
	print $sym->isa($sym2)   . "=1\n";	#true
	print $sym->isa("felid") . "=0\n";	#false
	print $sym->isa($sym3)   . "=0\n";	#false
	print $sym->isa("animal"). "=1\n";	#false
}

#my $car = Glyph->new("car", "vehicle");

#print "Lex count: " . $lex->count() . "\n";
print $lex->list() . "\n";
$lex->write();

