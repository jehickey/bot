use Glyph;
use Lexicon;
use Word;
use Parser;

my $lex = Lexicon->new();
$lex->{verbose} = 0;




#my $vehicle = Glyph->new("vehicle");
$lex->add("null");
$lex->add("animal");
$lex->add("vertebrate", "animal");
$lex->add("mammal", "vertebrate");
